{
  "_id": "{{@ system @}}",
  "oauth2": {
    "access_token": "$SECRET(oauth_access_token)",
    "client_id": "$SECRET(oauth_client_id)",
    "client_secret": "$SECRET(oauth_client_secret)",
    "refresh_token": "$SECRET(oauth_refresh_token)",
    "token_url": "{{@ token_url @}}"
  },
  "operations": {
    "company-list": {
      "method": "GET",
      "url": "companies"
    },
    "currencies-list": {
      "method": "GET",
      "url": "companies/{{ properties.company_id }}/currencies"
    },
    "customers-list": {
      "method": "GET",
      "url": "companies/{{ properties.company_id }}/customers"
    },
    "employees-list": {
      "method": "GET",
      "url": "companies/{{ properties.company_id }}/employees"
    },
    "vendors-list": {
      "method": "GET",
      "url": "companies/{{ properties.company_id }}/vendors"
    }
  },
  "type": "system:rest",
  "url_pattern": "https://graph.microsoft.com/beta/financials/%s",
  "verify_ssl": true
}